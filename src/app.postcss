:root {
	--app-light-gray: "#EEEEEE";
	--app-yellow: "#E0FF1C";
	--app-rose: "#FF979771";
	--app-light-blue: "#BDE4FF";
	--app-orange: "#FF5E13";
	--app-violet: "#9C46FF";
	--app-light-green: "#BBFFA3";
	--app-brown: "#AB6034";
	--app-green: "#ABFF39";
	--app-dark-green: "#1EA666";
	--app-red: "#BB061A";

	--app-grid-size-sm: 4;
	--app-grid-size-md: 12;
	--app-grid-size-lg: 16;
	
	--app-tile-size-sm: calc(calc(100vw - 30px) / var(--app-grid-size-sm) * 2);
	--app-tile-size-md: calc(calc(100vw - 30px) / var(--app-grid-size-sm) * 3);
	--app-tile-size-lg: calc(calc(100vw - 30px) / var(--app-grid-size-sm) * 4);
	--app-tile-size-xl: calc(calc(100vw - 30px) / var(--app-grid-size-sm) * 5);

	--app-col-size: calc(calc(100vw - 30px) / var(--app-grid-size-sm)); 
	--app-grid-width: calc(100vw - 30px); 
}

@screen sm{
	:root {
		--app-tile-size-sm: calc(calc(100vw - 30px) / var(--app-grid-size-md) * 3);
		--app-tile-size-md: calc(calc(100vw - 30px) / var(--app-grid-size-md) * 4);
		--app-tile-size-lg: calc(calc(100vw - 30px) / var(--app-grid-size-md) * 6);
		--app-tile-size-xl: calc(calc(100vw - 30px) / var(--app-grid-size-md) * 7);
		
		--app-col-size: calc(calc(100vw - 30px) / var(--app-grid-size-md)); 
		}
}

@screen lg {
	:root {
		--app-tile-size-sm: calc(calc(100vw - 30px) / var(--app-grid-size-lg) * 4);
		--app-tile-size-md: calc(calc(100vw - 30px) / var(--app-grid-size-lg) * 6);
		--app-tile-size-lg: calc(calc(100vw - 30px) / var(--app-grid-size-lg) * 7);
		--app-tile-size-xl: calc(calc(100vw - 30px) / var(--app-grid-size-lg) * 8);

		--app-col-size: calc(calc(100vw - 30px) / var(--app-grid-size-lg)); 
		}
}

