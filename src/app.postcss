@font-face {
	font-family: "Helvetica";
	src: url("/fonts/HelveticaNeueLTStd-Roman.otf") format("opentype");
	font-display: swap;
}

@font-face {
	font-family: "icomoon";
	src: url("/fonts/icomoon.eot?vnsalz");
	src: url("/fonts/icomoon.eot?vnsalz#iefix") format("embedded-opentype"),
		url("/fonts/icomoon.ttf?vnsalz") format("truetype"),
		url("/fonts/icomoon.woff?vnsalz") format("woff"),
		url("/fonts/icomoon.svg?vnsalz#icomoon") format("svg");
	font-weight: normal;
	font-style: normal;
	font-display: block;
}

.tile-sm {
	max-width: var(--app-tile-size-sm) !important;
}
.tile-md {
	max-width: var(--app-tile-size-md) !important;

}
.tile-lg {
	max-width: var(--app-tile-size-lg) !important;

}
.tile-xl {
	max-width: var(--app-tile-size-xl) !important;

}

[class^="icon-"],
[class*=" icon-"] {
	/* use !important to prevent issues with browser extensions that change fonts */
	font-family: "icomoon" !important;
	speak: never;
	font-style: normal;
	font-weight: normal;
	font-variant: normal;
	text-transform: none;
	line-height: 1;

	/* Better Font Rendering =========== */
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
}

.icon-arrow:before {
	content: "\e900";
}
.icon-plus:before {
	content: "\e901";
}

html,
body {
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
}

.hyphens-auto {
	hyphens: auto;
}

